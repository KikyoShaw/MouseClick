<UserControl x:Class="WpfHook.LifeAfter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfHook"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Margin="20">
        <TextBlock Text="基于OpenCV开发，确保机器正常配置" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 10">
            <Button Height="30" Margin="10  0 0 0 " Content="自动采集"/>
            <Button Height="30" Margin="10  0 0 0 " Content="自动使用鸡腿"/>
            <Button Height="30" Margin="10  0 0 0 " Content="自动托运"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="获取坐标点:" VerticalAlignment="Center"/>
            <TextBlock Text="当前目标资源:" Margin="10  0 0 0 " VerticalAlignment="Center"/>
            <TextBlock Text="背包状态:" Margin="10  0 0 0 " VerticalAlignment="Center"/>
        </StackPanel>
    </StackPanel>

</UserControl>
